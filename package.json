{
  "name": "raffel",
  "version": "0.1.0",
  "description": "Unified multi-protocol server runtime. One core, multiple transports.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./stream": {
      "types": "./dist/stream/index.d.ts",
      "import": "./dist/stream/index.js"
    },
    "./validation/zod": {
      "types": "./dist/validation/adapters/zod.d.ts",
      "import": "./dist/validation/adapters/zod.js"
    },
    "./validation/yup": {
      "types": "./dist/validation/adapters/yup.d.ts",
      "import": "./dist/validation/adapters/yup.js"
    },
    "./validation/joi": {
      "types": "./dist/validation/adapters/joi.d.ts",
      "import": "./dist/validation/adapters/joi.js"
    },
    "./validation/ajv": {
      "types": "./dist/validation/adapters/ajv.d.ts",
      "import": "./dist/validation/adapters/ajv.js"
    },
    "./validation/fastest": {
      "types": "./dist/validation/adapters/fastest.d.ts",
      "import": "./dist/validation/adapters/fastest.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "server",
    "rpc",
    "streaming",
    "multi-protocol",
    "http",
    "websocket",
    "grpc",
    "tcp"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@grpc/grpc-js": "^1.14.0",
    "@grpc/proto-loader": "^0.7.11",
    "graphql": "^16.11.0",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "ws": "^8.19.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "ajv": "^8.17.1",
    "fastest-validator": "^1.19.0",
    "joi": "^17.13.3",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16",
    "yup": "^1.6.1",
    "zod": "^4.3.5",
    "zod-to-json-schema": "^3.25.1"
  },
  "peerDependencies": {
    "ajv": "^8.0.0",
    "fastest-validator": "^1.17.0",
    "joi": "^17.0.0",
    "yup": "^1.0.0",
    "zod": "^3.0.0 || ^4.0.0",
    "zod-to-json-schema": "^3.20.0"
  },
  "peerDependenciesMeta": {
    "ajv": {
      "optional": true
    },
    "fastest-validator": {
      "optional": true
    },
    "joi": {
      "optional": true
    },
    "yup": {
      "optional": true
    },
    "zod": {
      "optional": true
    },
    "zod-to-json-schema": {
      "optional": true
    }
  }
}
